# 数据库配置
DATABASE_URL="mysql://username:password@localhost:3306/moviewrite_db"

# 应用配置
NODE_ENV=development
PORT=3000

# Next.js Configuration
NEXT_PUBLIC_ENABLE_TESTNETS=true
NEXT_PUBLIC_PROJECT_ID=local-development
NEXT_PUBLIC_CHAIN_ID=31337

# Hardhat Configuration
HARDHAT_NETWORK=localhost
HARDHAT_RPC_URL=http://127.0.0.1:8545

# JWT配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# IPFS Configuration (Pinata)
# Get your API keys from https://app.pinata.cloud/developers/api-keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# 区块链配置
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
PRIVATE_KEY=your-private-key-for-deployment

# 合约地址
ARTICLE_NFT_CONTRACT_ADDRESS=0x...
REWARD_TOKEN_CONTRACT_ADDRESS=0x...
MOVIE_ARTICLE_CONTRACT_ADDRESS=0x...

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3配置 (可选)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=moviewrite-assets

# 监控配置
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
NEXT_PUBLIC_ENABLE_INDIVIDUAL_ARTICLES=true
NEXT_PUBLIC_ENABLE_IPFS_STORAGE=true
ENABLE_REGISTRATIONS=true
ENABLE_NFT_MINTING=true
ENABLE_CROWDFUNDING=false
ENABLE_SOCIAL_FEATURES=true

# 限制配置
MAX_UPLOAD_SIZE=10485760
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 第三方服务
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your-pixel-id

# 开发工具
NEXT_PUBLIC_VERCEL_URL=
ANALYZE_BUNDLE=false