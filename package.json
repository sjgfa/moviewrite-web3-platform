    "diagnose": "hardhat run scripts/diagnose-contract.js --network localhost",
    "clean": "rimraf .next node_modules/.cache artifacts cache",
    "kill:node": "taskkill /f /im node.exe 2>nul || echo 'No node processes found'",
    "restart": "npm run kill:node && npm run clean && echo 'Now run: npm run quick-start'",
    "fix-hydration": "node scripts/fix-hydration.js",
    "fix-all": "npm run fix-hydration && npm run restart",
    "rewards": "hardhat run scripts/auto-rewards.js --network localhost",
    "rewards:auto": "hardhat run scripts/auto-rewards.js --network localhost",
    "admin": "node scripts/admin-quick-start.js",
    "admin:start": "node scripts/admin-quick-start.js",
    "help": "echo 'Available commands: npm run quick-start (recommended), npm run start:dev, npm run diagnose, npm run fix-hydration, npm run rewards, npm run admin'"
