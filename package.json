  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy-and-setup.js --network localhost",
    "deploy:local": "hardhat run scripts/deploy-and-setup.js --network localhost",
    "test": "hardhat test",
    "node": "hardhat node",
